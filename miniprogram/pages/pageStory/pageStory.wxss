/* pages/pageStory/pageStory.wxss */
.story-item {
  padding:0 15rpx;
}
.story-item >image{
  width: 100%;
}
.story-item .story-user {
  display: flex;
}
.story-item .story-user .story-user-photo{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.story-item .story-user .story-user-photo image{
  width: 100%;
  height: 100%;
}
.story-item .story-user .story-user-name{
  float: left;
  font-size: 32rpx;
  line-height: 100rpx;
  margin-left:20rpx; 
}
.line{
  height: 10rpx;
  width: 100%;
  background: #000;
}

.pic-detail{
  display: flex;
  flex-direction: row ;
}
.pic-photo{
  flex: 1;
  padding:20rpx;
} 
.pic-photo image{
  width: 100%;
}
.pic-detail .pic-desc{
  flex: 1;
   padding:20rpx;
}